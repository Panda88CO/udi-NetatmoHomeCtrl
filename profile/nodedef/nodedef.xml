<nodeDefs>
  <nodeDef id="controller" nls="ctl">
    <editors />
    <sts>
      <st id="ST" editor="connect" />
    </sts>
    <cmds>
      <sends />
      <accepts>
        <cmd id="UPDATE" /> 
      </accepts>
    </cmds>
  </nodeDef>

  <nodeDef id="room" nls="nroom">
    <sts>
      <st id="ST" editor="connect" />
      <st id="CLITEMP" editor="temperature" />
      <st id="CLISPH" editor="temperature" />
      <st id="CLIMD" editor="t_ctrl_mode" />
      <st id="GV0" editor="energy_req" />
      <st id="GV1" editor="bool" />
      <st id="GV2" editor="bool" />
      <st id="GV3" editor="t_timestamp" />     
    </sts>
    <cmds>
      <sends />
      <accepts>
        <cmd id="UPDATE" />  
        <cmd id="SETPOINT" >
               <p id="stemp" editor="set_temp" init="CLISPH"/>             
               <p id="spmode" editor="th_mode" init="0" /> 
               <p id="active_t" editor="t_min" init="0" />   
        </cmd>      
        <cmd id="OPMODE" >
                <p id="opmode" editor="setCLIMD" init="CLIMD"/> 
                <p id="active_t" editor="t_min" init="0" />   
        </cmd>          
</accepts>
    </cmds>
  </nodeDef>


  <nodeDef id="ctrlroom" nls="nroom">
    <sts>
      <st id="ST" editor="connect" />
      <st id="GV10" editor="wifi" />
      <st id="GV3" editor="t_timestamp" />     
    </sts>
    <cmds>
      <sends />
      <accepts>
        <cmd id="UPDATE" />         
      </accepts>
    </cmds>
  </nodeDef>


  <nodeDef id="valve" nls="nvalve">
    <sts>
      <st id="ST" editor="connect" />
      <st id="GV0" editor="battery" />
      <st id="GV1" editor="rf_strength" />
      <st id="GV2" editor="bat_value" />
    </sts>
    <cmds>
      <sends />
      <accepts> 
        <cmd id="UPDATE" />        
      </accepts>
    </cmds>
  </nodeDef>

  <nodeDef id="power" nls="npower">
    <sts>
      <st id="ST" editor="connect" />
      <st id="GV0" editor="on_off" />
      <st id="GV1" editor="power" />
      <st id="GV2" editor="power" />
    </sts>
    <cmds>
      <sends />
      <accepts> 
        <cmd id="UPDATE" />   
        <cmd id="OUTLETCTRL" >
                <p id="" editor="on_off" init="GV0"/> 
        </cmd>                  
      </accepts>
    </cmds>
  </nodeDef>

  <nodeDef id="light" nls="nlight">
    <sts>
      <st id="ST" editor="connect" />
      <st id="GV0" editor="on_off" />
      <st id="GV1" editor="brightness" />
    </sts>
    <cmds>
      <sends />
      <accepts> 
        <cmd id="UPDATE" />
        <cmd id="LIGHTCTRL" >
                <p id="Lstate" editor="on_off" init="GV0"/> 
                <p id="Lbrightness" editor="brightness" init="GV1" />   
        </cmd>                
      </accepts>
    </cmds>
  </nodeDef>

    <nodeDef id="remote" nls="nremote">
    <sts>
      <st id="ST" editor="connect" />
      <st id="GV0" editor="battery" />
      <st id="GV2" editor="bat_value" />
    </sts>
    <cmds>
      <sends />
      <accepts> 
        <cmd id="UPDATE" />        
      </accepts>
    </cmds>
  </nodeDef>

</nodeDefs>
